<%= form_for([@post, @post.comments.build], :remote => true) do |f| %>
	<div class="field">
		<%= f.label(:body, "Add comment:") %><br />
		<%= f.text_area :body %>
	</div>
	<div class="field">
		<%= f.label(:commenter, "Author:") %>
		<%= f.text_field :commenter %>
	</div>
	<div class="actions">
		<%= f.error_messages %>
		<%= f.submit("Submit") %>
	</div>
<% end %>
